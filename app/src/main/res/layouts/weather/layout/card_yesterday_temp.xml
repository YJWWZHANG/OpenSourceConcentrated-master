<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="YesterdayTemp"
            type="com.zqb.concentrated.weather.bean.WeatherFutureBean.DataBean.YesterdayBean"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/temp_selector_anim"
        app:cardCornerRadius="3dp">
        <!--app:cardElevation="2dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="32dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/iv_forecast_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                app:imageUrl="@{`53`}"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp">

                <TextView
                    android:id="@+id/tv_forecast_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{YesterdayTemp.date}"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_forecast_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="@{YesterdayTemp.low + ` ` + YesterdayTemp.high}"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_forecast_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_forecast_date"
                    android:layout_marginTop="4dp"
                    android:text="@{YesterdayTemp.type + ` ` + YesterdayTemp.fx + ` ` + YesterdayTemp.fl}"
                    android:textColor="#969696"
                    android:textSize="12sp"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>



        
