<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sdv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_header_iamge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        sdv:backgroundImage="@drawable/news_image_loading"
        sdv:progressBarImage="@drawable/news_image_loading"
        sdv:progressBarImageScaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_black50"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="@color/material_white"/>

</RelativeLayout>