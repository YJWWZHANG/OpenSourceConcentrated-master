<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:sdv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"

    card_view:cardBackgroundColor="@color/material_white95"

    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"

    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_news_image"
            android:layout_width="@dimen/news_item1_image_width"
            android:layout_height="@dimen/news_item1_image_height"
            sdv:backgroundImage="@drawable/news_image_loading"
            sdv:progressBarImage="@drawable/news_image_loading"
            sdv:progressBarImageScaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_news_title"
            style="@style/news_item1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sdv_news_image"
            android:singleLine="true"
            android:text="中石油:美国油价便宜因不含税美国油价便宜因不含税美国油价便宜因不含税美国油价便宜因不含税美国油价便宜因不含税美"/>

        <TextView
            android:id="@+id/tv_news_digest"
            style="@style/news_item1_digest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_news_title"
            android:layout_below="@+id/tv_news_title"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="中国油价的48%交税了，美国价税分离，价是价，税是税。中国油价的48%交税了，美国价税分离，价是价，税是税。中国油价的48%交税了，美国价税分离，价是价，税是税。"/>

